{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["ESNext", "dom"],
        "paths": {
            "src/*": ["src/*"]
        },
        "rootDir": "./src",
        "baseUrl": "./",
        "outDir": "./dist",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["src/**/*"]
}
